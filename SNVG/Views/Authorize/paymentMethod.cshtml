
@{
    ViewBag.Title = "paymentMethod";
    Layout = "~/Views/Shared/_sharedLayout.cshtml";
}
<link href="~/wwwroot/css/mensizecomponent.css" rel="stylesheet" />
<div class="master-wrapper-content">
    <div class="master-column-wrapper">
        <div class="center-1">
            <style type="text/css">
                .login-text-cntnr {
                    display: inline-block;
                    width: 100%;
                    position: relative;
                    padding: 100px 0;
                }

                #Login-page {
                    display: inline-block;
                    width: 100%;
                    position: relative;
                    text-align: center;
                }

                    #Login-page::before {
                        position: absolute;
                        bottom: -15px;
                        width: 100%;
                        left: 0;
                        height: 15px;
                        content: "";
                        background-image: url(images/code.jpg/);
                    }

                .login-text-cntnr {
                    display: inline-block;
                    position: relative;
                    margin: 0 auto;
                    max-width: 415px;
                    width: 100%;
                }

                    .login-text-cntnr input {
                        margin-bottom: 15px;
                        border-radius: 0;
                        border: 2px solid #000;
                    }

                    .login-text-cntnr h2 {
                        top: -100px;
                        font-size: 40px;
                        color: #333333;
                        margin: 0;
                        text-transform: uppercase;
                        margin-bottom: 40px;
                    }
            </style>
            <div id="Login-page" class="inner-page">

                <div class="inner-page-content">
                    <div class="container">
                        <div class="row">
                            <div class="login-text-cntnr">
                                <h3>How would you like to pay?</h3>
                                <form method="post" action="PaymentMethod">
                                    <div class="Summary___style-module__container___J99Zc">

                                        <div class="Summary___style-module__item___zxXzp">
                                            <div>Free delivery and returns</div>
                                            <div>£0</div>
                                        </div>
                                        <div class="Summary___style-module__item___zxXzp">
                                            <div class="Summary___style-module__item-content___hSqNI">
                                                Styling charge
                                                <ul class="Summary___style-module__fee-summary___BFP5x">
                                                    <li>Will be deducted from the cost of any items you purchase</li>
                                                </ul>
                                            </div>
                                            <div>£@ViewBag.NumberValue</div>
                                        </div>
                                        <div class="Summary___style-module__total___h74c9">
                                            <div>Total</div>
                                            <div>£@ViewBag.NumberValue</div>
                                        </div>
                                    </div>

                                    <h4 class="Summary___style-module__title___X8FZV Summary___style-module__payment-copy___AqF7w">Add your payment details</h4>
                                    <h3 class="">Credit Card or Debit Card Details</h3>
                                    <input autocomplete="off" class="form-control" name="CardName" placeholder="CardHolder Name" type="text" id="CardName">
                                    <input autocomplete="off" class="form-control" name="cardnumber" placeholder="Card Number eg(11111111111)" type="number" id="cardnumber">
                                    <input autocomplete="off" class="form-control" name="ExpiryDate" placeholder="Expiration eg(2022/04/20)" type="datetime" id="ExpiryDate">
                                    <input autocomplete="off" class="form-control" name="cvv" placeholder="CVV" type="number" id="cvv">
                                    <input autocomplete="off" class="form-control" name="PsotCode" placeholder="Postcode eg(45614)" type="number" required>
                                    <input autocomplete="off" class="form-control" name="Address" placeholder="Address" type="text" required>
                                    <input type="checkbox" name="COD" onclick="testCheck()" id="myInput"> Cash On Delivery
                                    <input autocomplete="off" class="form-control sbmt" name="" value="Next : Checkout" type="submit">
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    function testCheck() {
        var x = document.getElementById("myInput");
        if (x.checked == true) {
            document.getElementById("CardName").disabled = true;
            document.getElementById("cardnumber").disabled = true;
            document.getElementById("ExpiryDate").disabled = true;
            document.getElementById("cvv").disabled = true;
        }
        else {
            document.getElementById("CardName").disabled = false;
            document.getElementById("cardnumber").disabled = false;
            document.getElementById("ExpiryDate").disabled = false;
            document.getElementById("cvv").disabled = false;
        }
    }
</script>