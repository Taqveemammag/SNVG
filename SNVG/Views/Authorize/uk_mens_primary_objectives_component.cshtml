
@{
    ViewBag.Title = "uk_mens_primary_objectives_component";
    Layout = "~/Views/Shared/_sharedLayout.cshtml";
}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<link href="~/wwwroot/css/mensizecomponent.css" rel="stylesheet" />
<div class="master-wrapper-content">
    <div class="master-column-wrapper">
        <div class="center-1">
            <style type="text/css">
                .login-text-cntnr {
                    display: inline-block;
                    width: 100%;
                    position: relative;
                    padding: 100px 0;
                }

                #Login-page {
                    display: inline-block;
                    width: 100%;
                    position: relative;
                    text-align: center;
                }

                    #Login-page::before {
                        position: absolute;
                        bottom: -15px;
                        width: 100%;
                        left: 0;
                        height: 15px;
                        content: "";
                        background-image: url(images/code.jpg/);
                    }

                .login-text-cntnr {
                    display: inline-block;
                    position: relative;
                    margin: 0 auto;
                    max-width: 415px;
                    width: 100%;
                }

                    .login-text-cntnr input {
                        margin-bottom: 15px;
                        border-radius: 0;
                        border: 2px solid #000;
                    }

                    .login-text-cntnr h2 {
                        top: -100px;
                        font-size: 40px;
                        color: #333333;
                        margin: 0;
                        text-transform: uppercase;
                        margin-bottom: 40px;
                    }

                .test:focus:after {
                    border-radius: 1000px;
                }

                .SelectableButton___selectableButton-module__root___GiA2u_kfi {
                    color: #25282d;
                    background-color: transparent;
                    border-color: #25282d;
                    border-width: 1px;
                }

                .SelectableButton___selectableButton-module__small___oFOfK_kfi {
                    display: inline-block;
                    border: 2px solid transparent;
                    text-align: center;
                    white-space: nowrap;
                    text-decoration: none;
                }
            </style>
            <div id="Login-page" class="inner-page">

                <div class="inner-page-content">
                    <div class="container">
                        <div class="row">
                            <div class="login-text-cntnr">
                                <h3>What are the reasons you're excited to try SNVG?</h3>
                                <form method="post" action="PrimaryObjectives">
                                    <div role="region" aria-label="checkbox page" class="CheckboxPage___style-module__container___1ptlr">
                                        <div class=" ">
                                            <div>
                                                <table style="margin-top: 30px">
                                                    <tr>
                                                        <td style="padding-left:100px; padding-right:50px">
                                                            @Html.CheckBox("TryNew", false, new { autocomplete = "off", requird = "Required" })
                                                        </td>
                                                        <td>
                                                            <label>
                                                                Try new items
                                                            </label>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td style="padding-left:100px; padding-right:50px">
                                                            @Html.CheckBox("discovery", false, new { autocomplete = "off", requird = "Required" })
                                                        </td>
                                                        <td>
                                                            <label style="min-width: 8rem;">
                                                                Discover new trends
                                                            </label>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td style="padding-left:100px; padding-right:50px">
                                                            @Html.CheckBox("savetime", false, new { autocomplete = "off", requird = "Required" })
                                                        </td>
                                                        <td>
                                                            <label>
                                                                Save time
                                                            </label>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td style="padding-left:100px; padding-right:50px">
                                                            @Html.CheckBox("expertadvice", false, new { autocomplete = "off", requird = "Required" })
                                                        </td>
                                                        <td>
                                                            <label>
                                                                Expert advice
                                                            </label>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td style="padding-left:100px; padding-right:50px">
                                                            @Html.CheckBox("exclusive_brands", false, new { autocomplete = "off", requird = "Required" })
                                                        </td>
                                                        <td>
                                                            <label>
                                                                Access to exclusive brands
                                                            </label>
                                                        </td>
                                                    </tr>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                    <input autocomplete="off" class="form-control sbmt" name="" onclick="validation();" value="Next" type="button">
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function validation() {
        var checkboxes = document.querySelectorAll('input[type="checkbox"]');
        var checkedOne = Array.prototype.slice.call(checkboxes).some(x => x.checked);
        if (checkedOne == false) {
            alert("Please select atleast one reason");
        }
        else {
            var x = document.getElementById("exclusive_brands").checked;
            var x1 = document.getElementById("expertadvice").checked;
            var x2 = document.getElementById("savetime").checked;
            var x3 = document.getElementById("TryNew").checked;
            var x4 = document.getElementById("discovery").checked;
            $.post("../Authorize/PrimaryObjectives", { discovery: x, TryNew: x1, exclusive_brands: x2, expertadvice: x3, savetime: x4 }, function (data) {
                window.location.href = "../Authorize/uk_height_component";
            });
        }
    }
</script>