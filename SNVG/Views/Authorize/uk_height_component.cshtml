
@{
    ViewBag.Title = "uk_height_component";
    Layout = "~/Views/Shared/_sharedLayout.cshtml";
}

<div class="master-wrapper-content">
    <div class="master-column-wrapper">
        <div class="center-1">
            <style type="text/css">
                .login-text-cntnr {
                    display: inline-block;
                    width: 100%;
                    position: relative;
                    padding: 100px 0;
                }

                #Login-page {
                    display: inline-block;
                    width: 100%;
                    position: relative;
                    text-align: center;
                }

                    #Login-page::before {
                        position: absolute;
                        bottom: -15px;
                        width: 100%;
                        left: 0;
                        height: 15px;
                        content: "";
                        background-image: url(images/code.jpg/);
                    }

                .login-text-cntnr {
                    display: inline-block;
                    position: relative;
                    margin: 0 auto;
                    max-width: 415px;
                    width: 100%;
                }

                    .login-text-cntnr input {
                        margin-bottom: 15px;
                        border-radius: 0;
                        border: 2px solid #000;
                    }

                    .login-text-cntnr h2 {
                        top: -100px;
                        font-size: 40px;
                        color: #333333;
                        margin: 0;
                        text-transform: uppercase;
                        margin-bottom: 40px;
                    }
            </style>
            <div id="Login-page" class="inner-page">

                <div class="inner-page-content">
                    <div class="container">
                        <div class="row">
                            <div class="login-text-cntnr">
                                <h2>How tall are you?</h2>
                                <form role="form">
                                    <label for="feet"><input max="6" min="3" pattern="\d*" type="number" id="feet" name="imperial_height" class="Input___style-module__input___a43T4 " style="width:50px; height:40px; padding-left:5px; margin-right: 5px;">ft.</label>
                                    <label for="inches"><input max="11" min="0" pattern="\d*" type="number" id="inches" name="imperial_height" class="Input___style-module__input___a43T4 " style="width:50px; height:40px; padding-left:5px; margin-right: 5px;">in.</label>
                                    <a href="../Authorize/uk_weight_component">
                                        <input autocomplete="off" class="form-control sbmt" name="" value="Next" type="button">
                                    </a>
                                    <input autocomplete="off" style="background:none; border:hidden" name="" value="Already have an Account? Sign In" type="submit">
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>