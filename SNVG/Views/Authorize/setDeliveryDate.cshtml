
@{
    ViewBag.Title = "setDeliveryDate";
    Layout = "~/Views/Shared/_sharedLayout.cshtml";
}
<div class="master-wrapper-content">
    <div class="master-column-wrapper">
        <div class="center-1">
            <style type="text/css">
                .login-text-cntnr {
                    display: inline-block;
                    width: 100%;
                    position: relative;
                }

                #Login-page {
                    display: inline-block;
                    width: 100%;
                    position: relative;
                    text-align: center;
                }

                    #Login-page::before {
                        position: absolute;
                        bottom: -15px;
                        width: 100%;
                        left: 0;
                        height: 15px;
                        content: "";
                        background-image: url(images/code.jpg/);
                    }

                .login-text-cntnr {
                    display: inline-block;
                    position: relative;
                    margin: 0 auto;
                    max-width: 415px;
                    width: 100%;
                }

                    .login-text-cntnr input {
                        margin-bottom: 15px;
                        border-radius: 0;
                        border: 2px solid #000;
                    }

                    .login-text-cntnr h2 {
                        top: -100px;
                        font-size: 40px;
                        color: #333333;
                        margin: 0;
                        text-transform: uppercase;
                        margin-bottom: 40px;
                    }
            </style>
            <div id="Login-page" class="inner-page">

                <div class="inner-page-content">
                    <div class="container">
                        <div class="row">
                            <div class="login-text-cntnr">
                                <h3>Does this delivery date work for you?</h3>
                                <form role="form">
                                    <div>
                                        <p class="FirstFixScheduler___style-module__subcopy___T6cUK">We'll email you the tracking number once your parcel has been sent.</p>
                                        <div class="FirstFixScheduler___style-module__icon-container___tvBYb">
                                            <img height="127" width="127" src="//d21wp443wxzpju.cloudfront.net/packs/media/components/ConsolidatedShippingAndPaymentsPage/PaymentSummary/images/desktop-small-lower-funnel-box-image@2x-7e3e3adacd4bdd59b92e5f0b02a0ff5f.jpg" alt="fix icon" class="">
                                        </div>
                                        <div class="FirstFixScheduler___style-module__CalendarWrapper___G45vP">
                                            <div class="FirstFixScheduler___style-module__DatePickerWrapper___sFR2q">
                                                <a>
                                                    <input type="text" id="birthdaytime" name="birthdaytime" value="@DateTime.Now.AddDays(10).GetDateTimeFormats().FirstOrDefault()" style="padding:2%; margin-bottom:10px" disabled>
                                                    @*<span class="FirstFixScheduler___style-module__fix-date___qKOZ1">Thursday, 21 April</span>*@
                                                </a>
                                            </div>
                                            <input type="hidden" name="reservation[client_wants_fix_on]" value="2022-04-21">
                                            <input type="hidden" name="reservation[first_available_fix]" value="2022-04-14">
                                            <div>
                                                <div class="FirstFixScheduler___style-module__divider___vC1oZ"></div>
                                                <div class="FirstFixScheduler___style-module__copy-container___3y7hA">
                                                    <p class="FirstFixScheduler___style-module__copy___EWzI9">Provide your payment and delivery information within 30 minutes to reserve your delivery date.</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <a href="../Authorize/paymentMethod">
                                        <input autocomplete="off" class="form-control sbmt" name="" value="Next" type="button">
                                    </a>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
