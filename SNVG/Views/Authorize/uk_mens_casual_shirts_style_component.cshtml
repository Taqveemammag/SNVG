<script>
    function validation() {
        var checkboxes = document.querySelectorAll('input[type="checkbox"]');
        var checkedOne = Array.prototype.slice.call(checkboxes).some(x => x.checked);
        if (checkedOne == false) {
            alert("Please select atleast one reason");
        }
        else {
            var x = document.getElementById("slim").checked;
            var x1 = document.getElementById("regular").checked;
            $.post("../Authorize/ShirtStyle", { slim: x, regular: x1 }, function (data) {
                window.location.href = "../Authorize/uk_mens_jeans_fit_component";
            });
        }
    }
</script>